<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
  <Arguments/>
  <Context/>
  <Model>
    <DataType name="PayOrderInfo" parent="global:PayOrderInfo"/>
    <DataType name="Condition">
      <PropertyDef name="monthlyCycle">
        <Property name="dataType">Date</Property>
        <Property name="displayFormat">YM</Property>
        <Property name="label">月度</Property>
      </PropertyDef>
      <PropertyDef name="buildingCode">
        <Property name="label">楼宇编号</Property>
      </PropertyDef>
      <PropertyDef name="roomNo">
        <Property name="label">房间编号</Property>
      </PropertyDef>
      <PropertyDef name="status"/>
      <PropertyDef name="groupId">
        <Property name="dataType">String</Property>
      </PropertyDef>
      <PropertyDef name="groupName"/>
    </DataType>
    <DataType name="PayRoomGroup" parent="global:PayRoomGroup">
      <PropertyDef name="id">
        <Property name="dataType">String</Property>
      </PropertyDef>
    </DataType>
  </Model>
  <View>
    <ToolBar>
      <ToolBarButton id="buttonQuery">
        <Property name="icon">url(>skin>common/icons.gif) -20px -40px</Property>
        <Property name="caption">查询</Property>
      </ToolBarButton>
      <ToolBarButton id="buttonCharge">
        <Property name="caption">收费</Property>
        <Property name="icon">url(>skin>common/icons.gif) -200px -0px</Property>
      </ToolBarButton>
    </ToolBar>
    <AutoForm id="autoFormCondition">
      <Property name="dataType">Condition</Property>
      <Property name="createPrivateDataSet">true</Property>
      <Property name="cols">*,*,*</Property>
      <AutoFormElement>
        <Property name="name">monthlyCycle</Property>
        <Property name="property">monthlyCycle</Property>
        <Property name="trigger">defaultYearMonthDropDown</Property>
        <Editor/>
      </AutoFormElement>
      <AutoFormElement>
        <Property name="name">buildingCode</Property>
        <Property name="property">buildingCode</Property>
        <Editor/>
      </AutoFormElement>
      <AutoFormElement>
        <Property name="name">roomNo</Property>
        <Property name="property">roomNo</Property>
        <Editor/>
      </AutoFormElement>
      <AutoFormElement>
        <Property name="name">groupId</Property>
        <Property name="property">groupId</Property>
        <Property name="trigger">dataSetDropDownGroup</Property>
        <Property name="label">组别ID</Property>
        <Editor/>
      </AutoFormElement>
      <AutoFormElement>
        <Property name="name">groupName</Property>
        <Property name="property">groupName</Property>
        <Property name="readOnly">true</Property>
        <Property name="label">组别名称</Property>
        <Editor/>
      </AutoFormElement>
    </AutoForm>
    <DataSet id="dataSetOrderInfo">
      <Property name="dataType">[PayOrderInfo]</Property>
      <Property name="dataProvider">orderInfoService#queryPageForCondition</Property>
      <Property name="loadMode">manual</Property>
      <Property name="pageSize">100</Property>
    </DataSet>
    <DataSet id="dataSetSelect">
      <Property name="dataType">[PayOrderInfo]</Property>
      <Property name="loadMode">manual</Property>
    </DataSet>
    <ToolBar>
      <DataPilot id="dataPilotOrderInfo">
        <Property name="dataSet">dataSetOrderInfo</Property>
        <Property name="itemCodes">pages,pageSize</Property>
      </DataPilot>
    </ToolBar>
    <DataGrid id="dataGridOrderInfo">
      <Property name="dataSet">dataSetOrderInfo</Property>
      <Property name="readOnly">true</Property>
      <Property name="highlightCurrentRow">true</Property>
      <Property name="selectionMode">multiRows</Property>
      <Property name="stretchColumnsMode">stretchableColumns</Property>
      <RowSelectorColumn/>
      <DataColumn name="monthlyCycle">
        <Property name="property">monthlyCycle</Property>
      </DataColumn>
      <DataColumn name="buildingCode">
        <Property name="property">buildingCode</Property>
      </DataColumn>
      <DataColumn name="roomNo">
        <Property name="property">roomNo</Property>
      </DataColumn>
      <DataColumn name="waterBeforeQty">
        <Property name="property">waterBeforeQty</Property>
      </DataColumn>
      <DataColumn name="waterCurrentQty">
        <Property name="property">waterCurrentQty</Property>
      </DataColumn>
      <DataColumn>
        <Property name="name">actualQty</Property>
        <Property name="property">actualQty</Property>
        <Editor/>
      </DataColumn>
      <DataColumn name="waterApportionQty">
        <Property name="property">waterApportionQty</Property>
      </DataColumn>
      <DataColumn name="price">
        <Property name="property">price</Property>
      </DataColumn>
      <DataColumn name="waterPrice">
        <Property name="property">waterPrice</Property>
      </DataColumn>
      <DataColumn name="apportionPrice">
        <Property name="property">apportionPrice</Property>
      </DataColumn>
      <DataColumn name="lateFee">
        <Property name="property">lateFee</Property>
      </DataColumn>
      <DataColumn name="garbagePrice">
        <Property name="property">garbagePrice</Property>
      </DataColumn>
      <DataColumn name="networkPrice">
        <Property name="property">networkPrice</Property>
      </DataColumn>
      <DataColumn name="sewagePrice">
        <Property name="property">sewagePrice</Property>
      </DataColumn>
      <DataColumn name="otherPrice">
        <Property name="property">otherPrice</Property>
      </DataColumn>
      <DataColumn name="totalPrice">
        <Property name="property">totalPrice</Property>
      </DataColumn>
    </DataGrid>
    <Dialog id="dialogPay">
      <Property name="width">600</Property>
      <Property name="height">550</Property>
      <Buttons>
        <Button id="buttonConfirmPay">
          <Property name="caption">确认</Property>
          <Property name="icon">url(>skin>common/icons.gif) -20px -0px</Property>
        </Button>
        <Button id="buttonCancel">
          <Property name="icon">url(>skin>common/icons.gif) -280px -220px</Property>
          <Property name="caption">关闭</Property>
        </Button>
      </Buttons>
      <Children>
        <Container>
          <Property name="height">70px</Property>
          <Property name="width">400px</Property>
          <Property name="style">
            <Property name="bordor">1px</Property>
          </Property>
          <Label id="lblTitle" layoutConstraint="padding:20">
            <Property name="text">应收金额：</Property>
            <Property name="style">
              <Property name="font-size">50px</Property>
            </Property>
          </Label>
        </Container>
        <Container>
          <Property name="height">70px</Property>
          <Property name="width">400px</Property>
          <Label id="lblTotal" layoutConstraint="padding:20">
            <Property name="style">
              <Property name="font-size">50px</Property>
            </Property>
          </Label>
        </Container>
        <Container>
          <Property name="width">400px</Property>
          <Property name="height">70px</Property>
          <Label id="lblActualAmount" layoutConstraint="padding:20">
            <Property name="style">
              <Property name="font-size">50px</Property>
            </Property>
            <Property name="text">实收金额：</Property>
          </Label>
        </Container>
        <Container layoutConstraint="padding:15px">
          <Property name="height">40px</Property>
          <TextEditor id="editorAcutalAmount">
            <Property name="width">200px</Property>
            <Property name="style">
              <Property name="padding-left">10px</Property>
            </Property>
            <Property name="dataType">BigDecimal</Property>
          </TextEditor>
        </Container>
        <Container>
          <Property name="height">70px</Property>
          <Property name="width">550px</Property>
          <Label id="lblSurplus" layoutConstraint="padding:20">
            <Property name="style">
              <Property name="font-size">50px</Property>
            </Property>
          </Label>
        </Container>
      </Children>
      <Tools/>
    </Dialog>
    <UpdateAction id="updateActionPay">
      <Property name="confirmMessage">是否确认？</Property>
      <Property name="executingMessage">确认中...</Property>
      <Property name="successMessage">确认成功！</Property>
      <Property name="dataResolver">orderInfoService#updatePaymentInfo</Property>
      <Property name="alwaysExecute">false</Property>
      <UpdateItem>
        <Property name="dataSet">dataSetOrderInfo</Property>
        <Property name="dataPath">!DIRTY_TREE</Property>
      </UpdateItem>
    </UpdateAction>
    <DataSetDropDown id="dataSetDropDownGroup">
      <Property name="dataSet">dataSetGroup</Property>
      <Property name="displayProperty">name</Property>
      <Property name="property">id</Property>
      <Property name="useEmptyItem">true</Property>
      <Property name="assignmentMap">groupName=name</Property>
    </DataSetDropDown>
    <DataSet id="dataSetGroup">
      <Property name="dataType">[PayRoomGroup]</Property>
      <Property name="dataProvider">roomGroupService#listAll</Property>
    </DataSet>
    <AjaxAction id="ajaxActionRxtx">
      <Property name="service">rxtxService#sendDisplay</Property>
    </AjaxAction>
  </View>
</ViewConfig>
