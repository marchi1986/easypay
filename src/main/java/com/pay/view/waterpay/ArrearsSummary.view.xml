<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
  <Arguments/>
  <Context/>
  <Model>
    <DataType name="PayOrderInfo" parent="global:PayOrderInfo">
      <Reference name="buildingInfo">
        <Property name="dataType">PayBuildingInfo</Property>
        <Property name="dataProvider">buildingInfoService#get</Property>
        <Property name="parameter">$${this.buildingCode}</Property>
      </Reference>
      <Reference name="buildingDetail">
        <Property name="dataType">PayBuildingDetail</Property>
        <Property name="dataProvider">buildingDetailService#getForCondition</Property>
        <Property name="parameter">
          <Entity>
            <Property name="buildingCode">$${this.buildingCode}</Property>
            <Property name="roomNo">$${this.roomNo}</Property>
          </Entity>
        </Property>
      </Reference>
      <Reference name="user">
        <Property name="dataType">PayUser</Property>
        <Property name="dataProvider">userService#get</Property>
        <Property name="parameter">$${this.buildingDetail.userId}</Property>
      </Reference>
    </DataType>
    <DataType name="Condition">
      <PropertyDef name="monthlyCycle">
        <Property name="dataType">Date</Property>
        <Property name="displayFormat">YM</Property>
        <Property name="label">月度</Property>
      </PropertyDef>
      <PropertyDef name="buildingCode">
        <Property name="label">楼宇编号</Property>
      </PropertyDef>
      <PropertyDef name="roomNo">
        <Property name="label">房间编号</Property>
      </PropertyDef>
      <PropertyDef name="status"/>
    </DataType>
  </Model>
  <View>
    <ToolBar>
      <ToolBarButton id="buttonQuery">
        <Property name="icon">url(>skin>common/icons.gif) -20px -40px</Property>
        <Property name="caption">查询</Property>
      </ToolBarButton>
    </ToolBar>
    <AutoForm id="autoFormCondition">
      <Property name="dataType">Condition</Property>
      <Property name="createPrivateDataSet">true</Property>
      <Property name="cols">*,*,*</Property>
      <AutoFormElement>
        <Property name="name">monthlyCycle</Property>
        <Property name="property">monthlyCycle</Property>
        <Property name="trigger">defaultYearMonthDropDown</Property>
        <Editor/>
      </AutoFormElement>
      <AutoFormElement>
        <Property name="name">buildingCode</Property>
        <Property name="property">buildingCode</Property>
        <Editor/>
      </AutoFormElement>
      <AutoFormElement>
        <Property name="name">roomNo</Property>
        <Property name="property">roomNo</Property>
        <Editor/>
      </AutoFormElement>
    </AutoForm>
    <DataSet id="dataSetOrderInfo">
      <Property name="dataType">[PayOrderInfo]</Property>
      <Property name="dataProvider">orderInfoService#queryPageForCondition</Property>
      <Property name="loadMode">manual</Property>
      <Property name="pageSize">100</Property>
    </DataSet>
    <ToolBar>
      <DataPilot id="dataPilotOrderInfo">
        <Property name="dataSet">dataSetOrderInfo</Property>
        <Property name="itemCodes">pages,pageSize</Property>
      </DataPilot>
    </ToolBar>
    <DataGrid id="dataGridOrderInfo">
      <Property name="dataSet">dataSetOrderInfo</Property>
      <Property name="readOnly">true</Property>
      <Property name="highlightCurrentRow">true</Property>
      <Property name="selectionMode">multiRows</Property>
      <Property name="stretchColumnsMode">stretchableColumns</Property>
      <DataColumn name="monthlyCycle">
        <Property name="property">monthlyCycle</Property>
      </DataColumn>
      <DataColumn name="buildingCode">
        <Property name="property">buildingCode</Property>
      </DataColumn>
      <DataColumn>
        <Property name="name">buildingName</Property>
        <Property name="property">buildingInfo.name</Property>
        <Editor/>
      </DataColumn>
      <DataColumn>
        <Property name="name">doorplate</Property>
        <Property name="property">buildingInfo.doorplate</Property>
        <Editor/>
      </DataColumn>
      <DataColumn name="roomNo">
        <Property name="property">roomNo</Property>
      </DataColumn>
      <DataColumn>
        <Property name="name">waterMeterCode</Property>
        <Property name="property">buildingDetail.waterMeterCode</Property>
        <Editor/>
      </DataColumn>
      <DataColumn>
        <Property name="name">username</Property>
        <Property name="property">user.userName</Property>
        <Editor/>
      </DataColumn>
      <DataColumn name="totalPrice">
        <Property name="property">totalPrice</Property>
        <Property name="caption">欠费金额</Property>
      </DataColumn>
    </DataGrid>
  </View>
</ViewConfig>
